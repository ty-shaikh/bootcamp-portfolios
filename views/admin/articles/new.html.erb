    element: document.getElementById("description"),
    status: false,
  });

</script>

<script>
  const uploadField = document.getElementById("graphic-upload");

  uploadField.onchange = function() {
    if(this.files[0].size > 1097152){
       alert("File is too big!");
       this.value = "";
    };
  };
</script>
