<section class="mt-8 w-2/3 mx-auto">
  <div>
    <p class="text-red-500 font-semibold">
      <a href="/admin/<%= @slug %>">
        &larr; Back to the dashboard
      </a>
    </p>
  </div>
</section>

<section class="w-full lg:w-2/3 mx-auto">
  <% if flash %>
    <%= erb :'shared/alert', locals: { flash: flash  } %>
  <% end %>
</section>

<div class="rounded shadow my-8 bg-white w-2/3 p-10 mx-auto">
  <div class="font-bold text-2xl mb-2">
    Theme Settings
  </div>
  <div class="markdown-text mb-3">
    <p>
      Customize the look and feel of your portfolio.
    </p>
  </div>

  <form class="my-6" method="POST" action="settings/theme">
    <input name="_method" value="patch" type="hidden">

    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Font selection
      </label>
      <div class="relative w-32">
        <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" name="font_family">
          <% @fonts = ["", "Fira Sans", "Montserrat", "Poppins", "Raleway", "Rubik"] %>
          <% @fonts.each do |font| %>
            <% if @account.font_family == font %>
              <option value="<%= font %>" selected><%= font == "" ? "Default" : font %></option>
            <% else %>
              <option value="<%= font %>"><%= font == "" ? "Default" : font %></option>
            <% end %>
          <% end %>
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700" style="bottom: 8px; right: 5px">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
      <p class="text-gray-600 text-xs italic">You can choose a different font.</p>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Background color
      </label>
      <div class="relative w-32">
        <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" name="bg_color">
          <% @colors = ["Gray", "White", "Red", "Orange", "Yellow", "Green", "Teal", "Blue", "Indigo", "Purple", "Pink"] %>
          <% @colors.each do |color| %>
            <% color_val = color.downcase %>
            <% if @account.bg_color == color_val %>
              <option value="<%= color_val %>" selected><%= color %></option>
            <% else %>
              <option value="<%= color_val %>"><%= color %></option>
            <% end %>
          <% end %>
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700" style="bottom: 8px; right: 5px">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>

      <p class="text-gray-600 text-xs italic">Choose a different background color. Remeber to pair the accent and background colors together.</p>
    </div>


    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Accent color
      </label>
      <div class="relative w-32">
        <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" name="accent_color">
          <% @colors = ["Gray", "Red", "Orange", "Yellow", "Green", "Teal", "Blue", "Indigo", "Purple", "Pink"] %>
          <% @colors.each do |color| %>
            <% color_val = color.downcase %>
            <% if @account.accent_color == color_val %>
              <option value="<%= color_val %>" selected><%= color %></option>
            <% else %>
              <option value="<%= color_val %>"><%= color %></option>
            <% end %>
          <% end %>
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700" style="bottom: 8px; right: 5px">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
      <p class="text-gray-600 text-xs italic">You can choose a different color for buttons and links.</p>
    </div>

    <div class="flex items-center justify-between">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
        Update your theme
      </button>
    </div>
  </form>

  </div>
  <div class="rounded shadow my-8 bg-white w-2/3 p-10 mx-auto">
    <div class="font-bold text-2xl mb-2 ">
      Favicon Settings
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Your Favicon
      </label>

      <% if (@account.favicon) and (!@account.favicon.empty?) %>
      <div class="mb-2">
          <img src="/favicons/<%= @account.favicon %>" alt="" width="50">
      </div>
      <div class="mb-2">
        <form method="POST" action="settings/favicon" onsubmit="return confirm('Are you sure you remove this favicon?');">
          <div style="margin:0;padding:0">
            <input name="_method" value="delete" type="hidden" />
            <button class="text-red-500 font-semibold underline" type="submit">Delete favicon</button>
          </div>
        </form>
      </div>
      <% end %>

      <form class="my-6" method="POST" action="settings/favicon" enctype="multipart/form-data">
        <input name="_method" value="patch" type="hidden">
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" name="icon" type="file" accept="image/png" id="favicon-upload" required>
        <p class="text-gray-600 text-xs italic mb-2">Make sure you use a PNG file. You can <a href="https://favicon.io/emoji-favicons/" class="underline" target="_blank">find existing favicions here</a>.</p>
        <div class="flex items-center justify-between">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
            Update favicon
          </button>
        </div>
      </form>
    </div>

  </div>

</div>

<script>
  const uploadField = document.getElementById("favicon-upload");

  uploadField.onchange = function() {
    if(this.files[0].size > 1097152){
       alert("File is too big!");
       this.value = "";
    };
  };

</script>
