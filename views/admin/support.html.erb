<section class="mt-24 w-3/4 mx-auto mb-6">
  <div class="text-center">
    <div class="text-3xl font-bold">
      Questions & Support
    </div>

    <% if @message %>
      <%= erb :'shared/success', locals: { message: @message  } %>
    <% end %>
  </div>
</section>


<section class="my-12 w-3/4 mx-auto">
  <form method="POST" action="/support">
    <div class="mb-8">
      <div class="bg-white border rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
          <label class="block text-gray-700 text-xl lg:text-sm font-bold mb-2">
            Your Name
          </label>
          <input class="appearance-none border-2 border-gray-300 rounded w-full py-2 px-4 mb-3 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" name="name" required>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 text-xl lg:text-sm font-bold mb-2">
            Your Email
          </label>
          <input class="appearance-none border-2 border-gray-300 rounded w-full py-2 px-4 mb-3 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="email" name="email" required>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 text-xl lg:text-sm font-bold mb-2">
            Your Question/Comment/Feedback
          </label>
          <textarea class="appearance-none border-2 border-gray-300 rounded w-full py-2 px-4 mb-3 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" rows="10" name="question"></textarea>
        </div>
      </div>
    </div>
    <div class="flex items-center justify-between">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
        Send your message
      </button>
    </div>
  </form>
</section>
