<div class="flex items-center rounded border border-gray-300 mb-10 bg-white">
  <div class="w-1/3 mx-8">
    <% if (article.graphic) and (!article.graphic.empty?) %>
    <img src="/graphics/<%= article.graphic %>" class="mx-auto" style="max-width: 200px; max-height: 200px">
    <% else %>
    <div class="border text-center text-2xl text-gray-500 py-3 rounded">
      <p>
        <%= article.title.split.map{|i| i[0,1].upcase}.join %>
      </p>
    </div>
    <% end %>
  </div>
  <div class="w-full p-6">
    <div class=" mb-2">
      <p class="font-bold text-black text-4xl lg:text-3xl">
        <%= article.title %>
      </p>
    </div>
    <div>
      <p class="text-gray-600 text-2xl lg:text-xl">
        <%= article.summary %>
      </p>
    </div>
  </div>
  <div class="flex-1">
    <p class="text-xl lg:text-base text-black">
    </p>
  </div>
</div>
